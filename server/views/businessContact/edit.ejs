<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="<%= businessContact.contactName %>"
                    name="contactName" 
                    value="<%= businessContact.contactName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="<%= businessContact.contactNo %>"
                    name="contactNo" 
                    required>
                    <%= businessContact.contactNo %>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="<%= businessContact.email %>"
                    name="email" 
                    required>
                    <%= businessContact.email %>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Address</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="<%= businessContact.address %>"
                    name="address" 
                    required>
                    <%= businessContact.address %>
                    </textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>